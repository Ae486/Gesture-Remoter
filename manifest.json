{
  "manifest_version": 3,
  "name": "Gesture Remoter",
  "version": "0.1.0",
  "description": "Control scrolling/zoom/video with hand gestures using MediaPipe (local model).",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gesture Remoter",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "permissions": ["offscreen", "scripting", "tabs", "storage", "activeTab", "debugger"],
  "host_permissions": ["<all_urls>"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
